package com.local.lessons.basics;

/**
 * @author Zero
 *
 */
public class FlowControl {

	/**
	 * Basics for Flow Control:
	 * IF/Else
	 * IF / ElseIf/ Else
	 * Switch
	 */
	public static void main(String[] args) {
		int age = 13;
		String output = ""; 
		if(age == 0){
			output = "NewBorn";
		}
		else if(age <5 && age>0) {
			output = "Toddler";
		}else if(age >5 && age < 10){
			output = "Kid";
		}else if(age>10 && age <18) {
			output = "Teenager";		
		}else {
			output = "adult";
		}
		
		System.out.println(output);
		

	}

}
